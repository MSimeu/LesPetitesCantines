<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        <TextView
                android:textSize="26sp"
                android:text="Aller Ã  la cantine :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:layout_centerVertical="true"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_centerHorizontal="true"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintEnd_toEndOf="@+id/tv_title"/>

        <at.markushi.ui.CircleButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/arrow_down"
                app:cb_color="#99CC00"
                app:cb_pressedRingWidth="8dip"
                android:id="@+id/button_here"
                app:layout_constraintStart_toEndOf="@+id/button_take_away"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_take_away"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintDimensionRatio="w,1:1"/>

        <at.markushi.ui.CircleButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/arrow_up"
                app:cb_color="#99CC00"
                app:cb_pressedRingWidth="8dip"
                android:id="@+id/button_take_away"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_here"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintDimensionRatio="w,1:1"/>

        <TextView
                android:text="Graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/graph_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAllCaps="true"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_arrow"
                android:textSize="24sp"/>

        <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="300dip"
                android:id="@+id/graph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_graph_sub"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_up"
                android:id="@+id/iv_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="110dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
                android:text="Temps d'attente avant caisse "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_graph_sub"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/graph_title"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>

        <lib.kingja.switchbutton.SwitchMultiButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:strokeRadius="5dp"
                app:strokeWidth="1dp"
                app:selectedTab="0"
                app:selectedColor="#eb7b00"
                app:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/graph"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                android:id="@+id/switchmultibutton"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

        <TextView
                android:text="30 min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button_take_away"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/button_take_away"
                app:layout_constraintEnd_toEndOf="@+id/button_take_away"
                android:gravity="center"/>

        <TextView
                android:text="1h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button_here"
                app:layout_constraintStart_toStartOf="@+id/button_here"
                app:layout_constraintEnd_toEndOf="@+id/button_here"
                android:gravity="center"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>